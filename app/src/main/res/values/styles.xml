<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LinearLayoutMainElementStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/element_margin</item>
        <item name="android:layout_marginTop">@dimen/element_margin</item>
        <item name="android:layout_marginBottom">@dimen/element_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayoutElementStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/element_padding</item>
        <item name="android:paddingBottom">@dimen/element_padding</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TextViewErrorStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/element_padding</item>
        <item name="android:paddingBottom">@dimen/element_padding</item>
        <item name="android:textColor">@color/design_default_color_error</item>
    </style>

</resources>